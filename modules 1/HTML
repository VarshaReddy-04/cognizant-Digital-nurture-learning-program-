  <!-- Registration Form -->
  <section id="contact">
    <h2>Register for an Event</h2>
    <form onsubmit="handleSubmit(); return false;">
      Name: <input type="text" name="name" placeholder="Your Name" required autofocus><br><br>
      Email: <input type="email" name="email" placeholder="you@example.com" required><br><br>
      Event Date: <input type="date" name="date" required><br><br>
      Event Type:
      <select name="eventType" id="eventType" onchange="storePreference()">
        <option value="music">Music</option>
        <option value="food">Food</option>
        <option value="art">Art</option>
      </select><br><br>
      Phone: <input type="text" id="phone" onblur="validatePhone()" placeholder="e.g., 9876543210"><br><br>
      Message:<br>
      <textarea id="message" rows="4" cols="40" onkeyup="countChars()"></textarea><br>
      <small>Characters: <span id="charCount">0</span></small><br><br>
      <button type="submit" onclick="confirmSubmit()">Submit</button>
      <output id="confirmation"></output>
      <br><br>
      <button type="button" onclick="clearPreferences()">Clear Preferences</button>
    </form>
  </section>

  <!-- Promo Video -->
  <section>
    <h2>Promo Video</h2>
    <video width="320" controls oncanplay="videoReady()">
      <source src="promo.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>
    <p id="videoMsg"></p>
  </section>

  <!-- Geolocation -->
  <section>
    <h2>Find Nearby Events</h2>
    <button onclick="getLocation()">Find Nearby Events</button>
    <p id="locationResult"></p>
  </section>

  <script>
    function handleSubmit() {
      document.getElementById("confirmation").textContent = "âœ… Registered successfully!";
    }

    function validatePhone() {
      const phone = document.getElementById("phone").value;
      if (!/^[6-9]\d{9}$/.test(phone)) {
        alert("Invalid phone number!");
      }
    }

    function countChars() {
      const count = document.getElementById("message").value.length;
      document.getElementById("charCount").textContent = count;
    }

    function videoReady() {
      document.getElementById("videoMsg").textContent = "ðŸŽ¥ Video ready to play!";
    }

    function confirmSubmit() {
      alert("Thanks for submitting!");
    }

    function storePreference() {
      const type = document.getElementById("eventType").value;
      localStorage.setItem("preferredEvent", type);
    }

    function clearPreferences() {
      localStorage.clear();
      sessionStorage.clear();
      alert("Preferences cleared!");
    }

    function getLocation() {
      if (!navigator.geolocation) {
        document.getElementById("locationResult").textContent = "Geolocation not supported!";
        return;
      }
      navigator.geolocation.getCurrentPosition(
        (position) => {
          const coords = `Latitude: ${position.coords.latitude}, Longitude: ${position.coords.longitude}`;
          document.getElementById("locationResult").textContent = coords;
        },
        (error) => {
          document.getElementById("locationResult").textContent = "Location access denied or unavailable.";
        },
        {
          enableHighAccuracy: true,
          timeout: 10000
        }
      );
    }

    // Auto-load saved preference
    window.onload = function () {
      const saved = localStorage.getItem("preferredEvent");
      if (saved) {
        document.getElementById("eventType").value = saved;
      }
    };

    // Warn if leaving unfinished form
    window.onbeforeunload = function () {
      return "You have unsaved changes. Are you sure you want to leave?";
    };
  </script>

</body>
